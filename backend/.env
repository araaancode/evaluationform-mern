# =============================================
# 🎯 تنظیمات اصلی سرور
# =============================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# =============================================
# 🗄️ تنظیمات دیتابیس MongoDB
# =============================================
MONGODB_URI=mongodb://localhost:27017/faramohajerat
# برای production:
# MONGODB_URI=mongodb://username:password@host:port/database?authSource=admin

# =============================================
# 🔐 تنظیمات احراز هویت و JWT
# =============================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# =============================================
# 📱 تنظیمات سرویس پیامک
# =============================================
# سرویس کاوه نگار
SMS_PROVIDER=kavenegar
KAVENEGAR_API_KEY=your_kavenegar_api_key_here
KAVENEGAR_SENDER=10004346

# سرویس مدیار (پشتیبان)
MEDIAR_SMS_API_KEY=your_mediar_api_key
MEDIAR_SMS_SENDER=5000123456

# متن پیامک‌ها
SMS_EVALUATION_SUBMITTED=سپاس از اعتماد شما به فرامهاجرت 🌟\nارزیابی شما با موفقیت ثبت شد. همکاران ما به زودی با شما تماس خواهند گرفت.\nhttps://faramohajerat.ir/dashboard
SMS_ADMIN_NOTIFICATION=ارزیابی جدید ثبت شد 📋\nنام: {firstName} {lastName}\nشماره: {phone}

# =============================================
# 📧 تنظیمات ایمیل (اختیاری)
# =============================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your.email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=فرامهاجرت <noreply@faramohajerat.ir>

# =============================================
# ☁️ تنظیمات Cloud Storage (اختیاری)
# =============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================
# 🔍 تنظیمات Logging و Monitoring
# =============================================
LOG_LEVEL=info
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn_here

# =============================================
# ⚙️ تنظیمات امنیتی
# =============================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# =============================================
# 🎨 تنظیمات برندها
# =============================================
BRAND_1_NAME=فرامهاجرت
BRAND_1_DOMAIN=faramohajerat.ir
BRAND_1_COLOR_PRIMARY=#8B0000
BRAND_1_COLOR_SECONDARY=#B22222

BRAND_2_NAME=برند دوم
BRAND_2_DOMAIN=brand2.ir
BRAND_2_COLOR_PRIMARY=#2E8B57
BRAND_2_COLOR_SECONDARY=#3CB371

BRAND_3_NAME=برند سوم
BRAND_3_DOMAIN=brand3.ir
BRAND_3_COLOR_PRIMARY=#1E90FF
BRAND_3_COLOR_SECONDARY=#87CEFA

# =============================================
# 📊 تنظیمات آنالیتیکس
# =============================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
ENABLE_CONSOLE_LOGS=true